{
  "name": "@rei/{{ name }}",
  "description": "{{ description }}",
  "author": "{{ author }}",
  "version": "0.0.1",
  {{#if_eq useRollup true}}
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "style": "dist/index.css",
  "files": [
    "dist",
    "src"
  ],
  {{else}}
  "main": "src/index.js",
  {{/if_eq}}
  "browserslist": "extends @rei/browserslist-config",
  "license": "UNLICENSED",
  "scripts": {
    {{#if_eq useRollup true}}
    "dev:server": "cross-env NODE_ENV=dev febs dev",
    "dev:build": "cross-env NODE_ENV=dev BABEL_ENV=es rollup -c --watch",
    "dev:clean": "rimraf dist && npm run dev",
    "dev": "npm-run-all -p dev:build dev:server",
    "build": "cross-env NODE_ENV=production BABEL_ENV=es rollup -c",
    "prebuild": "rimraf dist index.css",
    "test": "cross-env BABEL_ENV=test nyc --all vunit --spec=./test/**/*.spec.js",
    {{else}}
    "dev": "webpack-dev-server --inline --progress --config build/webpack.dev.conf.js",
    "build": "npm run lint && node build/build.js",
    "test": "npm run test-coverage",
    {{/if_eq}}
    "start": "npm run dev",
    "lint": "eslint --ext .js,.vue src",
    "prepare": "npm run build && npm run lint",
    "test-coverage": "npm run test-js-coverage && npm run test-vue-coverage",
    "test-js": "cross-env BABEL_ENV=test mocha --require @babel/register --recursive test/**/*.spec.js",
    "test-js-coverage": "cross-env NODE_ENV=test nyc mocha --require @babel/register --recursive test/**/*.spec.js",
    "test-js-watch": "cross-env BABEL_ENV=test mocha --require @babel/register --watch --recursive test/**/*.spec.js",
    "test-vue": "vunit --spec=./test/**/*.vue-spec.js",
    "test-vue-coverage": "vunit --spec=./test/**/*.vue-spec.js --coverage",
    "test-vue-watch": "vunit --spec='./test/**/*.vue-spec.js' --watch=src"
  },
  "dependencies": {
    {{#if_eq addComponents true}}
    "@rei/cdr-tokens": "^0.1.8",
    "@rei/cedar": "^2.0.2",
    {{/if_eq}}
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/runtime": "^7.4.4",
    "@rei/browserslist-config": "^1.0.4",
    "@rei/febs": "^5.1.0",
    "@rei/vunit": "^2.0.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "autoprefixer": "^7.1.2",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "cross-env": "^5.0.5",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-vue": "^5.2.2",
    "npm-run-all": "^4.1.5",
    "postcss-url": "^8.0.0",
    "rimraf": "^2.6.0",
    {{#if_eq useRollup true}}
    "rollup": "^1.11.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-vue": "^5.0.0"
    {{else}}
    "@babel/register": "^7.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "eslint-loader": "^2.1.2",
    "eslint-import-resolver-webpack": "^0.8.3",
    "file-loader": "^1.1.4",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^3.0.0",
    "node-notifier": "^5.1.2",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "ora": "^1.2.0",
    "portfinder": "^1.0.13",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "postcss-url": "^8.0.0",
    "sass-loader": "^7.1.0",
    "semver": "^5.3.0",
    "shelljs": "^0.7.6",
    "uglifyjs-webpack-plugin": "^1.1.1",
    "url-loader": "^0.5.8",
    "vue-loader": "^14.2.2",
    "vue-template-compiler": "^2.5.2",
    "webpack": "^4.35.3",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.1.0"
    {{/if_eq}}
  },
  "nyc": {
    "include": [
      "src/**/*.(js|vue)"
    ],
    "instrument": false,
    "sourceMap": false
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  }
}
